; =============================================================================
; CodeGraph: Fortran Tree-sitter Queries
; =============================================================================
; Captures: @definition.function, @definition.variable (module), @name

; ---------------------------------------------------------------------------
; Program statements
; ---------------------------------------------------------------------------
(program_statement
  (name) @name) @definition.function

; ---------------------------------------------------------------------------
; Subroutine definitions
; ---------------------------------------------------------------------------
(subroutine_statement
  (name) @name) @definition.function

; ---------------------------------------------------------------------------
; Function definitions
; ---------------------------------------------------------------------------
(function_statement
  (name) @name) @definition.function

; ---------------------------------------------------------------------------
; Module definitions
; ---------------------------------------------------------------------------
(module_statement
  (name) @name) @definition.variable

; ---------------------------------------------------------------------------
; Use statements (imports)
; ---------------------------------------------------------------------------
(use_statement
  (module_name) @name) @reference.import
